<script id="template-textMessage" type="text/html">
    <div class="box  chatmessagebox">
        <p id="messageText"><%- "<\%=  message.content %\>" %></p>

        <div class="has-text-right is-size-7">
            <span class="icon"><i class="fas fa-clock" aria-hidden="true"></i></span>
            <i id="timeSpan"><%- "<\%=  moment(message.time).format('h:mm') %\>" %></i>
        </div>
    </div>
</script>

